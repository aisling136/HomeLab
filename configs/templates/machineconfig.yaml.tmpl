{{ define "machineconfigtemplate" -}}
machine:
  install:
    disk: {{ .node.disk }}
    image: factory.talos.dev/installer/{{ (datasource "inventory").talos_factory_key }}:{{ (datasource "inventory").talos_version }}
    extraKernelArgs:
      - mitigations=off
  kubelet:
    extraMounts:
      - destination: /var/lib/longhorn
        type: bind
        source: /var/lib/longhorn
        options:
        - bind
        - rshared
        - rw
  network:
    nameservers:
      - 192.168.1.230
      - 1.1.1.1
    interfaces:
      - interface: {{ .node.interface }}
        addresses:
        - {{ .node.ip}}/24
        routes:
          - network: 0.0.0.0/0
            gateway: 192.168.1.1
        dhcp: true
    hostname: {{ .node.name }}
  features:
    kubePrism:
      enabled: true
      port: 7445
  files:
    - content: |
        [plugins."io.containerd.grpc.v1.cri"]
          enable_unprivileged_ports = true
          enable_unprivileged_icmp = true
        [plugins."io.containerd.grpc.v1.cri".containerd]
          discard_unpacked_layers = false
        [plugins."io.containerd.grpc.v1.cri".containerd.runtimes.runc]
          discard_unpacked_layers = false
      permissions: 0
      path: /etc/cri/conf.d/20-customization.part
      op: create
    - content: |
        [ NFSMount_Global_Options ]
        nfsvers=4.1
        hard=True
        noatime=True
        nodiratime=True
        rsize=131072
        wsize=131072
        nconnect=8
      permissions: 420
      path: /etc/nfsmount.conf
      op: overwrite
  sysctls:
    fs.inotify.max_queued_events: 65536
    fs.inotify.max_user_instances: 8192
    fs.inotify.max_user_watches: 524288
    net.core.rmem_max: 2500000
    net.core.wmem_max: 2500000
  nodeLabels:
    topology.kubernetes.io/region: main
    topology.kubernetes.io/zone: {{ .node.type }}
cluster:
  network:
    cni:
      name: "none"
    podSubnets:
      - 10.42.0.0/16
    serviceSubnets:
      - 10.43.0.0/16
  discovery:
    enabled: true
    registries:
        kubernetes:
            disabled: false
        service:
            disabled: false
  coreDNS:
    disabled: true
  {{- if eq .node.type "controlplane" }}
  allowSchedulingOnControlPlanes: true
  allowSchedulingOnMasters: true
  apiServer:
    certSANs:
    - "{{ (ds "inventory").controlplane_proxy_hostname }}"
    - "{{ (ds "inventory").controlplane_proxy_ip }}"
    - "127.0.0.1"
    disablePodSecurityPolicy: true
  proxy:
    disabled: true
  controllerManager:
    extraArgs:
      bind-address: "0.0.0.0"
  scheduler:
    extraArgs:
      bind-address: "0.0.0.0"
  etcd:
    extraArgs:
      listen-metrics-urls: "http://0.0.0.0:2381"
  {{- end }}
{{ end }}

{{ defineDatasource "inventory" "configs/inventory.yaml" }}
{{- range $node := (datasource "inventory").nodes}}
{{- $ctx := dict "node" $node }}
{{- $outPath := printf "configs/generated_configs/%s.yaml" $node.name }}
{{- tmpl.Exec "machineconfigtemplate" $ctx | file.Write $outPath }}
{{- end -}}
